{
  "manifest_version": 2,
  "name": "Shopguide Automation Sidebar",
  "version": "0.5.0",
  "description": "Sidebar to run simple automation commands like navigating to URLs from multiline instructions.",
  "permissions": [
    "tabs",
    "clipboardRead"
  ],
  "sidebar_action": {
    "default_title": "Automation",
    "default_panel": "sidebar.html"
  },
  "applications": {
    "gecko": {
      "id": "automation-sidebar@example.com",
      "strict_min_version": "109.0"
    }
  }
}
